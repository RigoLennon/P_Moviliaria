<!-- Custom Styles -->
<style>
  #mi_img{width:1.1em; height:1.1em; fill: yellow; stroke: #BDBD13; }
  .Sameline { 
    display: inline-block; 
    padding:0.1em;
    }
</style>
<!-- End Custom Styles -->

<!-- Slider -->
<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
  <ol class="carousel-indicators">
    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
    <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
  </ol>
  <div class="carousel-inner">
    <div class="carousel-item active">
      <%=image_tag ("banner01.jpg"), class: "d-block w-100" %>
    </div>
    <div class="carousel-item">
      <%=image_tag ("banner02.jpg"), class: "d-block w-100" %>
    </div>
    <div class="carousel-item">
      <%=image_tag ("banner03.jpg"), class: "d-block w-100" %>
    </div>
  </div>
  
  <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>

<!-- End Slider -->

<br>

<!-- Most Popular Houses -->
<div class="container">
<h2>Casas mas populares</h2>
  <div class="card-deck">
  <% House.limit(3).each do |house| %>
  <div class="card">
    <%= image_tag house.image, class: "card-img-top" %>
    <div class="card-body">
      <h5 class="card-title"><%= house.title %></h5>
      <p class="card-text"><%= house.description %></p>
      <!--<p class="card-text"><%= house.stars %></p>-->
      <p class="Sameline"> Valoracion: 
      <% if house.stars == 5 %>
        <div id="mi_img" class="Sameline">
          <%= open_iconic :icon, :star %>
        </div>
        <div id="mi_img" class="Sameline">
          <%= open_iconic :icon, :star %>
        </div>
        <div id="mi_img" class="Sameline">
          <%= open_iconic :icon, :star %>
        </div>
        <div id="mi_img" class="Sameline">
          <%= open_iconic :icon, :star %>
        </div>
        <div id="mi_img" class="Sameline">
          <%= open_iconic :icon, :star %>
        </div>
      <% elsif house.stars == 4 %>
        <div id="mi_img" class="Sameline">
          <%= open_iconic :icon, :star %>
        </div>
        <div id="mi_img" class="Sameline">
          <%= open_iconic :icon, :star %>
        </div>
        <div id="mi_img" class="Sameline">
          <%= open_iconic :icon, :star %>
        </div>
        <div id="mi_img" class="Sameline">
          <%= open_iconic :icon, :star %>
        </div>
      <% elsif house.stars == 3 %>
        <div id="mi_img" class="Sameline">
          <%= open_iconic :icon, :star %>
        </div>
        <div id="mi_img" class="Sameline">
          <%= open_iconic :icon, :star %>
        </div>
        <div id="mi_img" class="Sameline">
          <%= open_iconic :icon, :star %>
        </div>
      <% elsif house.stars == 2 %>
        <div id="mi_img" class="Sameline">
          <%= open_iconic :icon, :star %>
        </div>
        <div id="mi_img" class="Sameline">
          <%= open_iconic :icon, :star %>
        </div>
      <% else %>
        <div id="mi_img" class="Sameline">
          <%= open_iconic :icon, :star %>
        </div>
      <% end %>
      </p>
    </div>
    <div class="card-footer">
      <small class="text-muted">Creado el: <%= house.created_at %></small>
    </div>
  </div>
  <% end %>
  </div>
</div>

